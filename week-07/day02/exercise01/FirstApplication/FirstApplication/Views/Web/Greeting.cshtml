@model FirstApplication.Models.Greeting
<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/css/style.css")" />

</head>
<body>
    <p>
        @*Hello, @Model.Content! (This site was loaded @Model.Id times since last server start.)*@
        @foreach (var hello in Model.hellos)
        {
        <span style="color:rgb(@Model.random.Next(255), @Model.random.Next(255), @Model.random.Next(255));
              font-size: @Model.random.Next(10,50)px">
            
                @hello;<br>   
        </span>
        }
    </p>
</body>
</html>