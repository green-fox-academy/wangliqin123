@model TodoApp.Todo
<head>
    @{
        Layout = "_Layout";
    }
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    @*<link rel="stylesheet" type="text/css" href="@Url.Content("~/CSS/StyleSheet.css")" />*@
    <link href="~/CSS/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <input type="hidden" name="Id" value="@Model.Id" />
            <table class="table table-striped table-bordered col-md-5 table-hover">
                <tr>
                    <td>ID</td>
                    <td>Action</td>
                    <td>Done</td>
                    <td>Urgent</td>
                </tr>
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Title</td>
                    <td>@Model.IsDone</td>
                    <td>@Model.IsUrgent</td>
                </tr>
            </table>
            <h2><a href="/todo">Back to table</a></h2>
        </div>      
    </div> 
</body>