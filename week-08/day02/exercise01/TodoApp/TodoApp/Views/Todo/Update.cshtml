@model TodoApp.Todo
<body>
    <h1>Edit todo</h1>
    @using (Html.BeginForm("edit", "todo"))
    {
        <input type="hidden" name="Id" value="@Model.Id" />
        @Html.LabelFor(x => x.Title) @Html.TextBoxFor(x => x.Title)<br />
        @Html.LabelFor(x => x.IsUrgent) @Html.CheckBoxFor(x => x.IsUrgent)<br />
        @Html.LabelFor(x => x.IsDone) @Html.CheckBoxFor(x => x.IsDone)<br />
        <button type="submit">Submit</button>
    }
    <h2><a href="/todo">Cancel</a></h2>
</body>