@model TodoApp.Todo
<head>
    @{
        Layout = "_Layout";
    }
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <h1>Edit todo</h1>
                @using (Html.BeginForm("edit", "todo"))
                {
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <p>Todo description : @Html.TextBoxFor(x => x.Title)</p>
                    <p>Make it important: @Html.CheckBoxFor(x => x.IsUrgent)</p>
                    <p>Ready or not : @Html.CheckBoxFor(x => x.IsDone)</p>
                    <button type="submit">Submit</button>
                }
                <h2><a href="/todo">cancel</a></h2>
            </div>

        </div>

    </div>
   
</body>